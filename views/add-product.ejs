<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product</title>
  <link rel="icon" type="image/png" href="/image/favicon.png">
  <link href="https://fonts.googleapis.com/css2?family=Merienda&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/vendor-dashboard.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('partial/sidebar') %>
    <%- include('partial/header') %>
      <main class="container">
        <h2 class="page-title" style="padding-left: 5vw;">Add New Product</h2>
        <div class="d-flex align-items-start justify-content-between add-product-container">
          <div>

            <form id="addProductForm" class="product-form" product-id="">
              <!-- Product Name -->
              <div class="form-group">
                <label for="productName">Product Name:</label>
                <input type="text" id="productName" name="productName" placeholder="Enter Name" required>
              </div>

              <!-- Price with Unit -->
              <div class="form-group">
                <label for="price">Price:</label>
                <span class="inline-group">
                  <input type="number" id="price" name="price" required min="1" placeholder="Enter price">
                  <select id="priceUnit" name="priceUnit">
                    <option value="kg">₹ per Kg</option>
                    <option value="g">₹ per g</option>
                    <option value="ltr">₹ per Litre</option>
                    <option value="ml">₹ per ml</option>
                    <option value="piece">₹ per Piece</option>
                  </select>
                </span>
              </div>

              <!-- Quantity -->
              <div class="form-group">
                <label for="quantity">Available Quantity:</label>
                <span class="inline-group">
                  <input type="number" id="quantity" name="quantity" required min="1" placeholder="Enter quantity">
                  <select id="quantityUnit" name="quantityUnit">
                    <option value="kg">Kg</option>
                    <option value="g">g</option>
                    <option value="ltr">Litre</option>
                    <option value="ml">ml</option>
                    <option value="piece">Piece</option>
                  </select>
                </span>
              </div>

              <!-- Image -->
              <div class="form-group">
                <label for="productImage">Upload Image:</label>
                <span class="inline-group align-items-center">
                  <input type="file" id="productImage" name="productImage" accept="image/*" title=" " />
                  <span id="fileNameDisplay">No file selected</span>
                </span>
              </div>

              <!-- Description -->
              <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" placeholder="Enter product details"></textarea>
              </div>

              <!-- Two Buttons -->
              <div class="button-group">
                <button type="button" class="btn-preview btn btn-warning" id="previewBtn">Preview</button>
                <button type="submit" class="btn-submit btn btn-success" id="addProductForm">Save</button>
              </div>
            </form>
          </div>

          <!-- Preview Section -->
          <div class="preview-section" id="previewSection">
            <h2 class="page-title" style="color: var(--dark-gray); font-size: 1.15rem;">Product Preview</h2>
            <img id="previewImage" src="" alt="Preview" class="preview-img">
            <p class="fw-bold"><span id="previewName"></span>&nbsp;(<span id="previewQty"></span>&nbsp;<span
                id="previewQtyUnit"></span>)</p>
            <p>₹<span id="previewPrice"></span><span id="previewPriceUnit"></span></p>
            <span id="previewDesc"></span>
          </div>
          <div class="product-container">
            <div id="product-search">
              <input type="text" id="productSearchInput" placeholder="Search products..." />
            </div>
            <div class="product-wrapper">
              <% if (noProductsMessage) { %>
                <div class="alert alert-danger my-3" style="margin: 10px 25px 10px 20px;">
                  <%= noProductsMessage %>
                </div>
                <% } else { %>

                  <% products.forEach(product=> {
                    const productKey = `${product.name} (${product.quantity}${product.quantityUnit})`;
                    %>
                    <div class="mb-4 product-card-wrapper" data-name="<%= productKey %>" product-id="<%= product.id %>">
                      <div class="card product-card shadow-sm mx-auto">
                        <img image-name="<%= product.imageName %>" src="<%= product.image %>"
                          class="card-img-top mx-auto d-block" alt="<%= product.name %>"
                          style="width: 150px; height: 150px; object-fit: cover;">
                        <div class="card-body text-center">
                          <h6 class="card-title">
                            <%= product.name %> (<%= product.quantity %>
                                <%= product.quantityUnit %>)
                          </h6>
                          <p class="fw-bold">₹<%= product.price %>/<%= product.priceUnit %>
                          </p>
                          <p>
                            <%= product.description %>
                          </p>
                          <div class="d-flex justify-content-around align-items-center">
                            <button id="edit" class="btn btn-primary">
                              <i class="fa-solid fa-pen"></i>
                            </button>
                            <button id="delete" class="btn btn-danger">
                              <i class="fa-solid fa-trash"></i>
                            </button>
                          </div>

                        </div>
                      </div>
                    </div>
                    <% }); %>
                      <% } %>

            </div>
          </div>
        </div>

      </main>
      <%- include('partial/footer') %>
        <script src="/js/add-product.js"></script>
</body>
</html>
