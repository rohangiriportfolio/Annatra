<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Group</title>
  <link rel="icon" type="image/png" href="/image/favicon.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Merienda&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/vendor-dashboard.css">
</head>

<body>
  <%- include('partial/sidebar') %>
    <%- include('partial/header') %>
      <main class="container" style="height: 90vh;">
        <p class="group-heading">Group Details</p>
        <div class="bg-white shadow-sm p-3 rounded group">
          <p>Members in Group: <strong>
              <%= members.length %>
            </strong></p>
          <p>Total Order Value: <strong id="totalAmount">₹<%= totalAmount %></strong></p>
          <p>Target for Confirmation: <strong id="targetAmount">₹<%= buyLimit %></strong></p>
          <div
            style="display: flex; flex-direction: row; justify-content: space-between; align-items: center; height: 7vh;">
            <button class="btn btn-primary" id="viewGroupBtn"><i class="fa-solid fa-eye"></i> View Group</button>
            <!-- Action Buttons -->
            <div class="d-flex"
              style="justify-content: flex-end; align-items: center; height: 7vh; width: 70%; margin: 1rem 0rem;">
              <span id="view-cart" class="btn btn-outline-primary"><i class="fa-solid fa-cart-shopping"></i> View
                Cart</span>
              <button id="confirmOrderBtn" class="btn btn-success"><i class="fa-solid fa-check"></i> Confirm
                Order</button>
            </div>
          </div>
        </div>

        <!-- Status Message -->
        <div id="statusMessage" class="alert alert-success d-none" role="alert">
          ✅ Order Confirmed Successfully!
        </div>


        <!-- Members List -->
        <div id="membersList" class="bg-white shadow-sm p-3 rounded group"
          style="display: none; overflow-y: auto; max-height: 40vh;">
          <h5 class="mb-3">Group Members</h5>
          <% members.forEach(member=> { %>
            <div class="member-card d-flex align-items-center mb-2" style="padding: 10px; border-radius: 5px; margin: 15px 0px;">
              <img src="<%= member.image || 'https://randomuser.me/api/portraits/lego/1.jpg' %>" alt="Member" width="60"
                height="60" class="rounded-circle">
              <div class="ms-3">
                <strong>
                  <%= member.name %>
                </strong><br>
                <small>Coords: <%= member.lat %>, <%= member.lon %> | Phone: <%= member.phone %> | Purchase: ₹<%= member.amount %></small>
              </div>
            </div>
            <% }) %>
        </div>

        <!-- Dynamic Options -->
        <div id="dynamicActions" class="bg-white shadow-sm p-3 rounded mb-4 d-none"></div>

        </div>
        <!-- </div> -->
      </main>
      <%- include('partial/footer') %>
        <script>
          var currentUserAmount = '<%= user?.currentUserAmount %>';
        </script>
        <script src="/js/view-group.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>